
<h1>My Tasks</h1>

<% @tasks.each do |task| %>
  <h2><%= task.title %></h2>
  <input type="checkbox">
  <p><%= link_to "Details of task", task_path(task.id) %></p>
  <p><%= link_to "Edit a task", edit_path(task.id) %></p>
  <p><%= link_to "Destroy the task", destroy_path(task), method: :delete %></p>
<% end %>
 <p><%= link_to "Add a new task", new_path %></p>







